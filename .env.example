# Environment configuration example - copy to .env and fill with real values

# Database connection (use a production-ready host)
DB_HOST=your_db_host
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=medical_system
# alternatively you could set a full URL:
# DATABASE_URL=mysql://user:pass@host:3306/database_name

# JWT secret for signing tokens
JWT_SECRET=supersecuresecretvalue

# Other optional API keys
#API_KEYS=

# Node environment (development or production)
NODE_ENV=development

# Server port (optional, default 3000)
PORT=3000

# Development/testing helpers
# When true all doctor accounts are immediately approved (DO NOT enable in
# production). The server logs a warning if this flag is set in NODE_ENV=production.
AUTO_APPROVE_DOCTORS=false
# Seed fake pharmacies in development; ignored in production. Set to true to
# populate sample pharmacy records when the database is empty.
USE_FAKE_PHARMACIES=false

# External landing page redirect for unauthenticated visitors. If set,
# visitors will be redirected to this URL instead of the local login page.
#EXTERNAL_REGISTRATION_URL=
